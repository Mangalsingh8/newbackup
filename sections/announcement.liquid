<!-- section/slider-bar.liquid -->
  {%- if section.settings.enable_bar -%}
  <div class="announcebar">
     {%for block-announcebar in section.blocks%}
        <div class="announcement-list"> {{ block-announcebar.settings.announce_text }} </div>
     {%endfor%}
  </div>
{% endif %}
{% schema %}
  {
    "name": "Section New announcement",
    "settings": [
      {
      "type": "checkbox",
      "id": "enable_bar",
      "label": "Enable bar",
      "default": true
    },
      {
      "type": "color",
      "id": "color_title",
      "label": "Heading color",
      "default": "#FFFFFF"
     },  
      {
      "type": "color",
      "id": "background__color",
      "label": "Background color",
      "default": "#FFFFFF"
     }
    ],
    "blocks":[
      {
        "name":"announce",
        "type":"image",
		"settings": [
          {
            "id"   : "announce_text",
            "type" : "textarea",
            "label": "Text"
          }
      ]
  }
    ]
  }
{% endschema %}
<style>
  .announcebar{
    text-align:center;
    background-color:{{ section.settings.background__color }};
    color:{{ section.settings.color_title}};
    font-size:18px;
    font-weight: 500;
    font-family: system-ui;
    padding:10px;
  }
</style>
<script>
  	$(document).ready(function(){
			$('.announcebar').slick({
				dots: false,
				infinite: true,
				speed: 2000,
				slidesToShow: 1,
				slidesToScroll: 1,
				autoplay: true,
				autoplaySpeed: 3000,
				arrows: false
			
			});
		});

  
</script>

